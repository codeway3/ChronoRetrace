{
  "$schema": "https://raw.githubusercontent.com/microsoft/pyright/main/docs/config.schema.json",
  "typeCheckingMode": "standard",
  "reportMissingModuleSource": "warning",
  "include": [
    "backend"
  ],
  "exclude": [
    "backend/tests",
    "backend/venv",
    "**/venv",
    "**/__pycache__",
    "**/node_modules"
  ],
  "executionEnvironments": [
    {
      "root": "backend",
      "extraPaths": [
        "backend"
      ]
    }
  ]
}
