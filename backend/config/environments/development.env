# ============================================================================
# ChronoRetrace Development Environment Configuration
# ============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql://chronoretrace:chronoretrace_dev@localhost:5432/chronoretrace_dev
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
# Alternative SQLite for local development
# DATABASE_URL=sqlite:///./chronoretrace.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY=dev-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
SECRET_KEY=dev-secret-key-change-this-in-production
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_MIN_LENGTH=8
SESSION_EXPIRE_HOURS=24

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_BURST_SIZE=20
RATE_LIMIT_ENABLED=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# IP Whitelist (disabled in development)
IP_WHITELIST_ENABLED=false
IP_WHITELIST=127.0.0.1,::1

# Third-party API Keys
TUSHARE_API_TOKEN=YOUR_TUSHARE_TOKEN_HERE
ALPHAVANTAGE_API_KEY=YOUR_KEY_HERE

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true
CACHE_PREFIX=chronoretrace:dev

# Performance Settings
WORKERS=1
MAX_CONNECTIONS=100
KEEP_ALIVE=2

# Monitoring
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Email Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false
FROM_EMAIL=noreply@chronoretrace.dev

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Feature Flags
FEATURE_REAL_TIME_DATA=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_FEATURES=false
FEATURE_MOBILE_APP=false