# ============================================================================
# ChronoRetrace Testing Environment Configuration
# ============================================================================

# Environment
ENVIRONMENT=testing
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://chronoretrace:chronoretrace_test@localhost:5432/chronoretrace_test
DATABASE_POOL_SIZE=3
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
# Alternative SQLite for testing
# DATABASE_URL=sqlite:///./test_chronoretrace.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=
REDIS_DB=1

# JWT Authentication
JWT_SECRET_KEY=test-jwt-secret-key-for-testing-only
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=1

# Security Settings
SECRET_KEY=test-secret-key-for-testing-only
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_MIN_LENGTH=6
SESSION_EXPIRE_HOURS=2

# API Rate Limiting (Disabled for testing)
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100
RATE_LIMIT_ENABLED=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# IP Whitelist (disabled in testing)
IP_WHITELIST_ENABLED=false
IP_WHITELIST=127.0.0.1,::1

# Third-party API Keys (Mock values for testing)
TUSHARE_API_TOKEN=test_token
ALPHAVANTAGE_API_KEY=test_key

# Cache Configuration
CACHE_TTL_SECONDS=60
CACHE_ENABLED=false
CACHE_PREFIX=chronoretrace:test

# Performance Settings
WORKERS=1
MAX_CONNECTIONS=10
KEEP_ALIVE=1

# Monitoring (Disabled for testing)
MONITORING_ENABLED=false
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# File Upload
MAX_FILE_SIZE=1048576  # 1MB
UPLOAD_PATH=./test_uploads

# Email Configuration (Mock for testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=test
SMTP_PASSWORD=test
SMTP_USE_TLS=false
FROM_EMAIL=test@chronoretrace.test

# Backup Configuration (Disabled for testing)
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=1
BACKUP_RETENTION_DAYS=1

# Feature Flags (All enabled for comprehensive testing)
FEATURE_REAL_TIME_DATA=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_FEATURES=true
FEATURE_MOBILE_APP=true

# Testing Specific
TEST_DATABASE_RESET=true
TEST_CACHE_RESET=true
TEST_MOCK_EXTERNAL_APIS=true
TEST_TIMEOUT_SECONDS=30
