# =============================================================================
# ChronoRetrace Backend Configuration Template
# =============================================================================

# Database Configuration
DATABASE_URL="sqlite:///./chronoretrace.db"
# For PostgreSQL: postgresql://username:password@localhost:5432/chronoretrace
# For MySQL: mysql://username:password@localhost:3306/chronoretrace

# Redis Configuration (for caching and rate limiting)
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
SECRET_KEY="your-super-secret-key-change-this-in-production"
PASSWORD_HASH_ALGORITHM="bcrypt"
PASSWORD_MIN_LENGTH=8
SESSION_EXPIRE_HOURS=24

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"

# IP Whitelist (optional, comma-separated)
# IP_WHITELIST="127.0.0.1,::1"
IP_WHITELIST_ENABLED=false

# Third-party API Keys
# Tushare API Token
# Get your token from https://tushare.pro/
TUSHARE_API_TOKEN="YOUR_TUSHARE_TOKEN_HERE"

# Alpha Vantage API Key
# Get your key from https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY="YOUR_KEY_HERE"

# Application Settings
APP_NAME="ChronoRetrace"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Stock Market Analysis Platform"
DEBUG=false
ENVIRONMENT="production"
HOST="0.0.0.0"
PORT=8000

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE_PATH="./logs/app.log"
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_USE_TLS=true
FROM_EMAIL="noreply@chronoretrace.com"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,csv,xlsx"

# Cache Settings
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# Monitoring and Analytics
MONITORING_ENABLED=false
ANALYTICS_ENABLED=false
METRICS_ENDPOINT="/metrics"

# Development Settings
# Note: RELOAD_DIRS is handled by start_dev.py and run_server.sh scripts
# No need to set it in .env file
RELOAD=false
AUTO_RELOAD=false